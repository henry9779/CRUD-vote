<h1>更新候選人</h1>


<% if @candidate.errors.any? %>
  <ul class= 'errors'>
    <% @candidate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@candidate) do |f| %>

<div>
  <%= f.label :name, '候選人姓名' %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :party, '黨派' %>
  <%= f.text_field :party %>
</div>

<div>
  <%= f.label :age, '年紀' %>
  <%= f.text_field :age %>
</div>

<div>
  <%= f.label :politics, '政見' %>
  <%= f.text_area :politics %>
</div>

  <%= f.submit '更新' %>
<% end %>

<%= link_to '返回列表', root_path %>